<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailSenActivity">

    <ImageView
        android:id="@+id/ivback"
        android:layout_width="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back_black"/>
    <LinearLayout
        android:id="@+id/lL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivuser"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/firstname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="firstname"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textColor="#000000"
            android:text="name"/>

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ivuser"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ivback"
        app:civ_border_width="1dp"
        android:layout_marginTop="20dp"
        app:civ_border_color="@android:color/black"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/lL"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        app:cardBackgroundColor="@color/colorcard1"
        >
        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tbanye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BanyÃ¨"
                android:layout_marginTop="14dp"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                />
            <TextView
                android:id="@+id/tbaniere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Changement"
                android:textSize="14sp"
                android:layout_below="@+id/tbanye"
                android:layout_marginLeft="10dp"
                android:layout_centerHorizontal="true"
                android:textColor="#FFFFFF"/>
            <TextView
                android:id="@+id/tnumber"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="8"
                android:textSize="18dp"
                android:textColor="@android:color/black"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tbaniere"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/custom_text"
                android:layout_marginTop="20dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/btn_vote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Vote"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/card"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@drawable/custom_button_connect"
        android:layout_marginTop="40dp"/>
    
</RelativeLayout>